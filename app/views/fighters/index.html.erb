<p id="notice"><%= notice %></p>

<h1>Fighters</h1>

<table class="table">
  <thead>
    <tr>
      <th class="w-40">Name</th>
      <th class="w-10 ta-center">Life</th>
      <th class="w-10 ta-center">Attack</th>
      <th class="w-10 ta-center">Dodge %</th>
      <th class="w-10 ta-center">Crit. %</th>
      <th colspan="3" class="w-20"></th>
    </tr>
  </thead>

  <tbody>
    <% @fighters.each do |fighter| %>
      <tr>
        <td><%= fighter.name %></td>
        <td class="ta-center"><%= fighter.life %></td>
        <td class="ta-center"><%= fighter.attack %></td>
        <td class="ta-center"><%= "#{fighter.dodge * 10} %" %></td>
        <td class="ta-center"><%= "#{fighter.critical * 5} %" %></td>
        <td>
          <%= link_to fighter do %>
            <i class="zmdi zmdi-eye"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_fighter_path(fighter) do %>
            <i class="zmdi zmdi-edit"></i>
          <% end %>
        </td>
        <td>
          <%= link_to fighter, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="zmdi zmdi-delete"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fighter', new_fighter_path %>
